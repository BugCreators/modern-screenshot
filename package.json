{
  "name": "egami",
  "version": "1.3.3",
  "packageManager": "pnpm@7.0.0",
  "description": "Generate image using HTML5 canvas and SVG",
  "main": "dist/egami.js",
  "module": "dist/egami.es.js",
  "types": "dist/types/index.d.ts",
  "browser": "dist/egami.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qq15725/egami.git"
  },
  "bugs": {
    "url": "https://github.com/qq15725/egami/issues"
  },
  "homepage": "https://github.com/qq15725/egami",
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "egami",
    "image",
    "dom",
    "svg",
    "canvas",
    "screenshot"
  ],
  "license": "MIT",
  "author": "wxm",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/egami.cjs.js",
      "import": "./dist/egami.es.js"
    }
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "vite build && tsc --project tsconfig.build.json",
    "release": "bumpp package.json --commit \"chore(release): publish v%s\" --push --tag && pnpm publish",
    "coverage": "vitest run --coverage",
    "test": "vitest --no-threads --no-isolate",
    "test:ui": "vitest --no-threads --no-isolate --ui"
  },
  "devDependencies": {
    "@qq15725/eslint-config": "^1.1.0",
    "@types/glob": "^7.2.0",
    "@types/jest-image-snapshot": "^5.1.0",
    "@vitest/ui": "^0.16.0",
    "bumpp": "^7.2.0",
    "eslint": "^8.17.0",
    "glob": "^8.0.3",
    "happy-dom": "^5.3.4",
    "jest-image-snapshot": "^5.1.0",
    "puppeteer": "^15.1.1",
    "typescript": "^4.7.3",
    "vite": "^2.9.13",
    "vitest": "^0.12.10"
  }
}
